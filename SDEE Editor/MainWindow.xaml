<Window x:Class="SDEE_Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SDEE_Editor"
        mc:Ignorable="d"
        Height="600" Width="1066"
        ResizeMode="CanMinimize" Title="SDEE Project CodeName Editor (Prototype Release)">
    <Grid>
        <Label Content="Toolbox" Margin="10,430,0,0"/>
        <Label Content="Preview Environment" Margin="155,10,0,0"/>
        <Label Content="Outline" Margin="10,10,0,0"/>
        <Label Content="Property Manager" Margin="771,10,0,0"/>

        <local:Toolbox HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="756" Margin="10,455,0,13" ElementClicked="Toolbox_ElementClicked" />

        <Grid Margin="155,35,292,139">
            <Rectangle Stroke="Black" StrokeThickness="3"  />
            <local:PreviewEnvironment x:Name="prevEnv" AllowDrop="True" Margin="3"/>
        </Grid>

        <TreeView Margin="10,39,908,139"/>
        <!--Test-->
        <TreeView Margin="771,35,16,10"/>
        <!--Test-->
    </Grid>
</Window>
