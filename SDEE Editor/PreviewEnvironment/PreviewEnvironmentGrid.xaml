<Grid x:Class="SDEE_Editor.PreviewEnvironment.PreviewEnvironmentGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SDEE_Editor.PreviewEnvironment"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Focusable="True"
             KeyboardNavigation.TabNavigation="None"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             AllowDrop="True" Background="Transparent" SnapsToDevicePixels="True">

    <Grid.CommandBindings>
        <CommandBinding Command="{x:Static local:PreviewEnvironmentCommands.RemoveSelectedElement}" CanExecute="RemoveSelectedElement_CanExecute" Executed="RemoveSelectedElement_Executed"/>
        <CommandBinding Command="{x:Static local:PreviewEnvironmentCommands.DeselectAll}" CanExecute="DeselectAll_CanExecute" Executed="DeselectAll_Executed"/>
    </Grid.CommandBindings>
    
    <!--It will be filled in run-time-->
</Grid>