<UserControl x:Class="SDEE_Editor.PreviewEnvironment.ElementSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SDEE_Editor.PreviewEnvironment"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="160" Focusable="True">

    <UserControl.DataContext>
        <Binding RelativeSource="{RelativeSource Self}"/>
    </UserControl.DataContext>



    <UserControl.Resources>

        <Style x:Key="rectStrokeStyle" TargetType="Rectangle">
            <Setter Property="Stroke" Value="{Binding Color}"/>
            <Setter Property="Visibility" Value="Collapsed"/>
            <Setter Property="Fill" Value="Transparent"/>
            <Setter Property="StrokeThickness" Value="{Binding Size}"/>
        </Style>
        
    </UserControl.Resources>

    <Rectangle x:Name="surroundingRect" Style="{StaticResource rectStrokeStyle}">
        <Rectangle.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Remove" Click="ContextMenuRemoveMenuItem_Click"/>
            </ContextMenu>
        </Rectangle.ContextMenu>
    </Rectangle>
</UserControl>
