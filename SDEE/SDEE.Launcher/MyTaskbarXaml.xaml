<UserControl x:Class="SDEE.Launcher.MyTaskbarXaml"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SDEE.Launcher"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Height="40"
             VerticalAlignment="Bottom" Loaded="MyTaskbar_Loaded">
    <Grid x:Name="grid" Height="Auto">

        <Rectangle Fill="OrangeRed"/>
        
        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Left" >
            
            <Button x:Name="startButton" Content="Start" Width="50"/>

            <StackPanel x:Name="elementsSp" Orientation="Horizontal" Margin="5, 0, 0, 0">
                <!--<Button Content="MC" Width="40" Margin="5, 0, 0, 0"/>
                <Button Content="MC2" Width="40"/>-->
            </StackPanel>

        </StackPanel>
        
    </Grid>
</UserControl>
